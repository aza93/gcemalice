{% extends "modules/base.html.twig" %}

{% block title %}Integration PA{% endblock %}

 {% block active_nav %}
<a class="active" href="">
    {% endblock %}


    {% block body %}
        {% block header %}
            {% include 'modules/header.html.twig' %}
        {% endblock %}


        {% block nav_hor %}
            {% include 'modules/navi.html.twig' %}
        {% endblock %}

        {% block container %}

            <div class="row">
                <div class="col-md-12">
                    <ul class="breadcrumbs-alt">
                        <li>
                            <a  href="">1. CHARGEMENT FICHIER {{ slug }}</a>
                        </li>
                        <li>
                            <a class="current" href="#">2. INTEGRATION DES {{ slug }}</a>
                        </li>
                        <li>
                            <a href="#">4. VALIDATION</a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-12">
                    <section class="panel">
                        <header class="panel-heading">Int√®gration Fichier
                            <span class="tools pull-right">
                                 <a href="javascript:;" class="fa fa-times"></a>
                         </span>
                        </header>
                        <div class="panel-body">

                            <table class="table  table-hover general-table">
                                <tbody>
                                <tr>
                                    <th>Nom</th>
                                    <td>{{ post.nom }}</td>
                                </tr>
                                <tr>
                                    <th>contenu</th>
                                    <td>{{ post.content }}</td>
                                </tr>
                                <tr>
                                    <th>nom du fichier</th>
                                    {%  set name =  post.filename|split('_')%}
                                    <td>{{ name[1] }}</td>
                                </tr>
                                {#<tr>#}
                                {#<th>Userid</th>#}
                                {#<td>{{ post.userId }}</td>#}
                                {#</tr>#}
                                <tr>
                                    <th>Statut</th>
                                    <td>{{ post.statut }}</td>
                                </tr>
                                <tr>
                                    <th>Updateat</th>
                                    <td>{% if post.updateAt %}{{ post.updateAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                                </tr>
                                </tbody>
                            </table>

                            <a class="btn btn-success" href="{{ path('integpa_csv',{'slug' : slug, 'id' : post.id, 'filename' : post.filename }) }}" > Integration {{ slug }} </a>

                        </div>
                    </section>
                </div>
            </div>
        {% endblock %}
    {% endblock %}

    {% block javascripts %}

{% endblock %}